<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="384dp"
        android:layout_height="44dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="92dp"
        android:autoSizeTextType="uniform"
        android:text="Bonjour, voici le dernier résultat :"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextResultatCalcul"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="76dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="number"
        android:text="Pas de résultat pour l'instant."
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonAllerCalculatrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="60dp"
        android:text="Aller à la calculatrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextResultatCalcul" />
</androidx.constraintlayout.widget.ConstraintLayout>